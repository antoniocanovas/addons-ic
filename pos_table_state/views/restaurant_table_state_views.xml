<odoo>
    <data>
        <!-- explicit list view definition -->
        <record model="ir.ui.view" id="restaurant_table_state_list">
            <field name="name">restaurant.table.state.list</field>
            <field name="model">restaurant.table.state</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="type"/>
                    <field name="color_code"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="restaurant_table_state_form">
            <field name="name">restaurant.table.state.form</field>
            <field name="model">restaurant.table.state</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="type"/>
                            <field name="color_code" widget="color"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="restaurant_table_state_action_window">
            <field name="name">Restaurant Table State</field>
            <field name="res_model">restaurant.table.state</field>
            <field name="view_mode">tree,form</field>
        </record>


        <record model="ir.actions.act_window" id="restaurant_table_action_window">
            <field name="name">Restaurant Table</field>
            <field name="res_model">restaurant.table</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- actions -->
        <menuitem name="Restaurant Table" id="restaurant_table_menu" parent="point_of_sale.menu_point_config_product"
                  action="restaurant_table_action_window"/>

        <menuitem name="Restaurant Table State" id="restaurant_table_state_menu" parent="point_of_sale.menu_point_config_product"
                  action="restaurant_table_state_action_window"/>
    </data>
</odoo>