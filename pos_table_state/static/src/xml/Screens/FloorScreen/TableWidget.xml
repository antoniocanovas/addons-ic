<?xml version="1.0" encoding="UTF-8" ?>
<templates id="template" xml:space="preserve">
    <t t-name="TableWidget" t-inherit="pos_restaurant.TableWidget" t-inherit-mode="extension" owl="1">
        <xpath expr="//span[hasclass('label')]" position="after">
            <span class="state">
                <t t-esc="props.table.state_id[1]" t-if="props.table.state_id"/>
            </span>
            <span class="OrderTime">
                <t t-esc="props.table.time_start" t-if="props.table.time_start and props.table.state_id[1] == 'New'"/>
                <t t-esc="props.table.time_waiting_order" t-if="props.table.time_waiting_order and props.table.state_id[1] == 'Waiting Order'"/>
                <t t-esc="props.table.time_pending_payment" t-if="props.table.time_pending_payment and props.table.state_id[1] == 'Pending Payment'"/>
                <t t-esc="props.table.time_done" t-if="props.table.time_done and props.table.state_id[1] == 'Done'"/>
            </span>
            <span class="OrderTotal">
                <t t-esc="env.pos.format_currency(props.table.amount)"/>
            </span>
        </xpath>
    </t>
</templates>
