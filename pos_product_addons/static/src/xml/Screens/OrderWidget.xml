<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="OrderWidget" t-inherit="point_of_sale.OrderWidget" t-inherit-mode="extension" owl="1">
		<xpath expr="//ul[hasclass('orderlines')]" position="replace">
			<ul class="orderlines">
				<t t-set="orderlinegrouped" t-value="orderlinesHasAddonsArray"/>
				<t t-foreach="orderlinegrouped" t-as="ofa_line">
					<t t-if="ofa_line != 'undefined'">
						<t t-foreach="orderlinegrouped[ofa_line]" t-as="orderline">
							<t t-if="orderline.product.has_addons">
								<Orderline line="orderline"/>
							</t>
						</t>
						<t t-foreach="orderlinegrouped[ofa_line]" t-as="orderline">
							<t t-if="orderline.product.is_addon">
								<Orderline line="orderline"/>
							</t>
						</t>
					</t>
					<t t-else="">
						<t t-foreach="orderlinegrouped[ofa_line]" t-as="orderline">
							<Orderline line="orderline"/>
						</t>
					</t>
				</t>
			</ul>
		</xpath>
	</t>

</templates>
