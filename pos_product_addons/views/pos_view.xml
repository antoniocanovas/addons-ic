<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="pos_product_template_form_view_inherit" model="ir.ui.view">
        <field name="name">pos.product.template.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="point_of_sale.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='pos']" position="inside">
                <group>
                    <field name="is_addon"/>
                    <field name="has_addons"/>
                    <field name="addon_price_hidden" attrs='{"invisible": [("is_addon","=",False)]}'/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>