<?xml version='1.0' encoding='UTF-8'?>
<odoo>

    <record id="project_roadmap_task_form_inh" model="ir.ui.view">
        <field name="name">Project Roadmap Task Form Inherited</field>
        <field name="model">project.task</field>
        <field name="arch" type="xml">
            <field name="description" position="after">
                <field name="roadmap_ids" context="{'default_type':'task',
                                'default_user_id':user_id,
                                'default_task_id':active_id,
                                'default_name':name,
                                'default_priority':1
                                }"/>
            </field>
        </field>
    </record>

</odoo>
