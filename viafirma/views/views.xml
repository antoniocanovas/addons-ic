        <record id="viafirma_form" model="ir.ui.view">
            <field name="active" eval="True"/>
            <field name="arch" type="xml">
                <form>
                    <sheet string="Viafirma">
                        <h2>
                            <field name="name"/>
                        </h2>
                        <group name="viafirma_data" col="4">
                            <field name="template_id"/>
                            <field name="attachment_signed_id"/>
                            <field name="viafirma_groupcode_id"/>
                            <!--<field name="attachment_id"/>-->

                            <field name="binary_to_encode_64"/>

                            <field name="status"/>
                        </group>
                        <group name="viafirma_compose">
                            <field name="noti_text" required="1"/>
                            <field name="noti_detail"/>
                            <field name="noti_tipo" widget="many2many_tags" required="1"/>
                            <field name="noti_subject" required="1"/>
                            <field name="police_code"/>
                            <field name="template_type"/>
                            <field name="document_readRequired"/>
                            <field name="document_watermarkText"/>
                            <field name="document_formRequired"/>
                        </group>
                        <group name="viafirma_others">
                            <field name="line_ids">
                                <tree editable="top">
                                    <field name="partner_id" required="1"/>
                                    <field name="email" readonly="1"/>
                                    <field name="mobile" readonly="1"/>
                                    <field name="signed_date" readonly="1"/>
                                    <field name="status" readonly="1"/>
                                </tree>
                            </field>
                            <field name="res_model"/>
                            <field name="res_id"/>
                            <field name="res_id_name"/>
                            <field name="status_id"/>
                            <field name="completed_date"/>
                            <field name="create_date"/>
                        </group>
                        <group>
                            <button name="firma_web" string="Send" type="object" class="oe_highlight oe_read_only"/>
                        </group>
                    </sheet>

                </form>
            </field>
            <field name="field_parent" eval="False"/>
            <field name="groups_id" eval="[(6, 0, [])]"/>
            <field name="inherit_id" eval="False"/>
            <field name="key" eval="False"/>
            <field name="mode">primary</field>
            <field name="model">viafirma</field>
            <field name="name">Default form view for Viafirma</field>
            <field name="priority">16</field>
            <field name="type">form</field>
        </record>

        <record id="viafirma_tree" model="ir.ui.view">
            <field name="active" eval="True"/>
            <field name="arch" type="xml">
                <tree string="Viafirma">
                    <field name="name"/>
                    <field name="res_model"/>
                </tree>
            </field>
            <field name="field_parent" eval="False"/>
            <field name="groups_id" eval="[(6, 0, [])]"/>
            <field name="inherit_id" eval="False"/>
            <field name="key" eval="False"/>
            <field name="mode">primary</field>
            <field name="model">viafirma</field>
            <field name="name">Default tree view for Viafirma</field>
            <field name="priority">16</field>
            <field name="type">tree</field>
        </record>

        <record id="viafirma_template_form" model="ir.ui.view">
            <field name="active" eval="True"/>
            <field name="arch" type="xml">
                <form>
                    <sheet string="Viafirma Template">
                        <h2>
                            <field name="name"/>
                        </h2>
                        <group name="basic_params" col="4">
                            <field name="description"/>
                            <field name="code"/>
                        </group>
                        <group name="notifications" col="4">
                            <field name="firma_ids" widget="many2many_tags"/>
                        </group>
                    </sheet>

                </form>
            </field>
            <field name="field_parent" eval="False"/>
            <field name="groups_id" eval="[(6, 0, [])]"/>
            <field name="inherit_id" eval="False"/>
            <field name="key" eval="False"/>
            <field name="mode">primary</field>
            <field name="model">viafirma.templates</field>
            <field name="name">Default form view for Viafirma Templates</field>
            <field name="priority">16</field>
            <field name="type">form</field>
        </record>

        <record id="viafirma_groups_form" model="ir.ui.view">
            <field name="active" eval="True"/>
            <field name="arch" type="xml">
                <form>
                    <sheet string="Códigos de grupo">
                        <h2>
                            <field name="name"/>
                        </h2>
                    </sheet>

                </form>
            </field>
            <field name="field_parent" eval="False"/>
            <field name="groups_id" eval="[(6, 0, [])]"/>
            <field name="inherit_id" eval="False"/>
            <field name="key" eval="False"/>
            <field name="mode">primary</field>
            <field name="model">viafirma.groups</field>
            <field name="name">Default form view for Viafirma groupss</field>
            <field name="priority">16</field>
            <field name="type">form</field>
        </record>

        <record id="viafirma_groups_tree" model="ir.ui.view">
