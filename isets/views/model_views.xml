<?xml version='1.0' encoding='UTF-8'?>
<odoo>

    <record id="isets_form" model="ir.ui.view">
        <field name="active" eval="True"/>
        <field name="arch" type="xml">
            <form>
                <header>
                    <!--
                          <button name="999999" string="Mark as done" type="object"/>
                    -->
                </header>
                <sheet>
                    <h1>
                        <field name="name"/>
                    </h1>
                    <group>
                      <group>
                        <field name="date"/>
                        <field name="type_id"/>
                      </group>
                      <group>
                        <field name="start" widget="timesheet_uom"/>
                        <field name="end" widget="timesheet_uom"/>
                      </group>
                      <group>
                        <field name="employee_ids" widget="many2many_tags"/>
                      </group>
                    </group>

                    <div name="repair" attrs="{'invisible':[('type','!=','repair')]}">
                        <group>
                            <field name="repair_id"/>
                            <!-- productos:-->
<!-- ORIGINAL:
                        <field name="operations" context="{'default_product_uom_qty': product_qty, 'default_company_id': company_id}">
-->
                            <field name="repair_product_ids" context="{'default_repair_id':repair_id}">
                                <tree string="Operations" editable="bottom">
                                    <field name="company_id" invisible="1" force_save="1"/>
                    <!--
                                    <field name="type"/>
                    -->
                                    <field name="product_id"/>
                                    <field name="name" optional="show"/>
                                    <field name="product_uom_category_id" invisible="1"/>
                                    <field name="lot_id" context="{'default_product_id': product_id, 'default_company_id': company_id}" groups="stock.group_production_lot"/>
                                    <field name="location_id" options="{'no_create': True}" groups="stock.group_stock_multi_locations" optional="show"/>
                                    <field name="location_dest_id" options="{'no_create': True}" groups="stock.group_stock_multi_locations" optional="show"/>
                                    <field name="product_uom_qty" string="Quantity"/>
                                    <field name="product_uom" string="UoM" groups="uom.group_uom" optional="show"/>
                                    <field name="repair_id" invisible="1"/>
                                    <field name="price_unit" invisible="1"/>
                                    <field name="tax_id" widget="many2many_tags" optional="show"/>
                                    <field name="price_subtotal" widget="monetary" invisible="1"/>
                                    <field name="currency_id" invisible="1"/>
                                </tree>
                            </field>
                            <field name="repair_service_ids">
                            </field>
                        </group>
                    </div>


                    <group name="task_data" attrs="{'invisible':[('type','!=','project')]}">
                        <field name="project_id"/>
                        <field name="task_id" domain="[('project_id','=',project_id)]"/>
                        <field name="project_service_ids"/>
                    </group>



                    <div name="workorder" attrs="{'invisible':[('type','!=','production')]}">
                        <group name="workorder_id" col="4">
                            <field name="mrp_id"/>
                            <field name="workorder_id" attrs="{'invisible':[('mrp_id','=',False)]}"/>
                        </group>
                        <h2>Services:</h2>
                        <field name="mrp_service_ids"/>
                        <h2>Products:</h2>
                        <field name="mrp_product_ids"/>
                    </div>
                    <field name="type" invisible="1"/>
                </sheet>
                <!--
                  <div class="oe_chatter">
                      <field name="message_follower_ids"/>
                      <field name="activity_ids"/>
                      <field name="message_ids" options="{'post_refresh': 'recipients'}"/>
                  </div>
                -->
            </form>
        </field>
        <field name="field_parent" eval="False"/>
        <field name="groups_id" eval="[(6, 0, [])]"/>
        <field name="inherit_id" eval="False"/>
        <field name="key" eval="False"/>
        <field name="mode">primary</field>
        <field name="model">isets</field>
        <field name="name">iSets form view</field>
        <field name="priority">16</field>
        <field name="type">form</field>
    </record>

    <record id="isets_tree" model="ir.ui.view">
        <field name="active" eval="True"/>
        <field name="arch" type="xml">
            <tree name="iSet_tree" string="iSets">
                <field name="name"/>
                <field name="type_id"/>
                <field name="date"/>
            </tree>
        </field>
        <field name="field_parent" eval="False"/>
        <field name="groups_id" eval="[(6, 0, [])]"/>
        <field name="inherit_id" eval="False"/>
        <field name="key" eval="False"/>
        <field name="mode">primary</field>
        <field name="model">isets</field>
        <field name="name">iSets Tree View</field>
        <field name="priority">16</field>
        <field name="type">tree</field>
    </record>


    <record id="isets_types_tree" model="ir.ui.view">
        <field name="active" eval="True"/>
        <field name="arch" type="xml">
            <tree string="iSets Types" sample="1" multi_edit="1" editable="bottom">
                <field name="name"/>
                <field name="type"/>
                <field name="partner_id"/>
                <field name="product_id"/>
            </tree>
        </field>
        <field name="field_parent" eval="False"/>
        <field name="groups_id" eval="[(6, 0, [])]"/>
        <field name="inherit_id" eval="False"/>
        <field name="key" eval="False"/>
        <field name="mode">primary</field>
        <field name="model">iset.types</field>
        <field name="name">iSets Types Tree View</field>
        <field name="priority">16</field>
        <field name="type">tree</field>
    </record>


</odoo>
