<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="action_caritas_zonas" model="ir.actions.act_window">
            <field name="name">Zonas Caritas</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">caritas.zona</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem
                id="menu_caritas_zona"
                name="Zonas Caritas"
                parent="base.menu_users"
                sequence="4"
                action="action_caritas_zonas"
                groups="base.group_system"/>

        <record id="view_caritas_zonas_form" model="ir.ui.view">
            <field name="name">caritas.zona.form</field>
            <field name="model">caritas.zona</field>
            <field name="arch" type="xml">
                <form string="arch">
                    <sheet>
                        <group>
                            <field name="name" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_caritas_zonas_tree" model="ir.ui.view">
            <field name="name">res.caritas.zona.tree</field>
            <field name="model">caritas.zona</field>
            <field name="field_parent"></field>
            <field name="arch" type="xml">
                <tree string="Zonas Caritas">
                    <field name="name"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>
