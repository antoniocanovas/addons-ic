<?xml version="1.0" encoding="UTF-8"?>
<templates>

    <t t-name="FixedProductsWidget" t-inherit="point_of_sale.ProductsWidget" t-inherit-mode="extension" owl="1">
        <xpath expr="//ProductsWidgetControlPanel" position="replace">
            <ProductsWidgetControlPanel breadcrumbs="breadcrumbs" subcategories="subcategories"
                                        hasNoCategories="hasNoCategories" parentSubCategory="parentSubCategory"/>
        </xpath>
    </t>

    <t t-name="FixedProductsWidgetControlPanel" t-inherit="point_of_sale.ProductsWidgetControlPanel"
       t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('breadcrumbs')]" position="after">
            <t t-if="props.subcategories.length == 0 and !env.pos.config.iface_display_categ_images and !env.isMobile">
                <t t-foreach="props.parentSubCategory" t-as="category" t-key="category.id">
                    <CategorySimpleButton category="category"/>
                </t>
            </t>
        </xpath>
    </t>

</templates>
