    <record id="view_order_form" model="ir.ui.view">
        <field name="name">sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="groups_id" eval="[(4, ref('sales_team.group_sale_salesman'))]"/>
        <field name="arch" type="xml">
            <xpath expr="//page/field[@name='order_line']/tree/field[@name='product_uom_qty']" position="before">
                <button name="action_open_sol" icon="fa-tasks" class="oe_stat_button" string="UdO" type="object"/>
            </xpath>
            <xpath expr="//field[@name='price_unit']" position="after">
                <field name="lst_price" optional="show"/>
                <field name="lst_price_discount" optional="show"/>
                <field name="udo_cost_amount" optional="show"/>
            </xpath>
        </field>
    </record>
