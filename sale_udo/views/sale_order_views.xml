<?xml version='1.0' encoding='UTF-8'?>
<odoo>
    <record id="sale_order_line_udo_form" model="ir.ui.view">
        <field name="active" eval="True"/>
        <field name="arch" type="xml">
            <form string="Sales Order Item" create="0">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="product_uom_qty" readonly="1"/>
                            <field name="product_uom" readonly="1"/>
                            <field name="udo_cost_amount"/>
                            <field name="display_type" invisible="1"/>
                        </group>
                        <group>
                            <field name="price_unit" readonly="1"/>
                            <field name="discount" groups="product.group_discount_per_so_line" readonly="1"/>
                            <field name="price_subtotal" widget="monetary"/>
                            <field name="price_total" widget="monetary"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="udo_template_id" attrs="{'readonly':[('state','!=','draft')]}"/>
                    </group>
                    <group>
                        <group>
                            <field name="udo_qty" attrs="{'readonly':[('state','!=','draft')]}"/>
                        </group>
                        <group>
                            <button class="oe_highlight oe_edit_only" type="action" name="%(sale_udo.sale_order_line_from_udo_template)d" string="Add UdOs" attrs="{'invisible':[('state','!=','draft')]}"/>
                        </group>
                    </group>
                    <field name="udo_line_ids" attrs="{'readonly':[('state','!=','draft')]}">
                        <tree editable="bottom">
                            <field name="product_id"/>
                            <field name="product_uom_qty" readonly="0"/>
                            <field name="product_uom"/>
                            <field name="price_unit_cost"/>
                            <field name="price_unit"/>
                            <field name="subtotal"/>
                            <field name="lst_price" optional="hide"/>
                            <field name="lst_price_discount" optional="hide"/>
                            <field name="name" invisible="1"/>
                            <field name="sale_line_id" invisible="1"/>
                            <field name="currency_id" invisible="1"/>
                        </tree>
                    </field>
                </sheet>
            </form>
        </field>
        <field name="field_parent" eval="False"/>
        <field name="groups_id" eval="[(6, 0, [])]"/>
        <field name="inherit_id" eval="False"/>
        <field name="key" eval="False"/>
        <field name="mode">primary</field>
        <field name="model">sale.order.line</field>
        <field name="name">UDO Sale Order Line</field>
        <field name="priority">24</field>
        <field name="type">form</field>
    </record>


