<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="project_task_progress_notebook" model="ir.ui.view">
        <field name="name">project.task.notebook</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="progress" widget="progressbar" class="oe_inline"/>
            </xpath>
            <xpath expr="//field[@name='tag_ids']" position="after">
                <field name="checklist_tmpl_id" domain="['|',('project_id','=',project_id),('project_id','=',False)]"
                       attrs="{'readonly':[('line_ids','!=',[])]}"/>
                <field name="checklist_id"/>
            </xpath>
            <field name="description" position="before">
                <field name="line_ids" context="{'default_cheklist_id':checklist_id}">
                    <tree editable="botton">
                        <field name="sequence" widget="handle"/>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="activity_ids" string="Next Activity" widget="list_activity" optional="show"/>
                        <field name="state"/>
                        <field name="active" widget="boolean_toggle"/>
                    </tree>
                </field>
            </field>
        </field>
    </record>


    <record id="project_task_progress_inherited_tree" model="ir.ui.view">
        <field name="name">project.task.inherit</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_tree2"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='activity_ids']" position="after">
                <field name="progress" widget="progressbar"/>
            </xpath>
        </field>
    </record>


</odoo>
