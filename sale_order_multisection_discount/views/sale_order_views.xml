<?xml version='1.0' encoding='UTF-8'?>
<odoo>

    <record id="view_saleorder_sections_key" model="ir.ui.view">
        <field name="name">Multisection Key</field>
        <field name="model">sale.order</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='opportunity_id']" position="after">
                <field name="multisection_key"/>
            </xpath>
        </field>
    </record>

    <record id="view_multisection_discount_button" model="ir.ui.view">
        <field name="name">Multisection Discount Button</field>
        <field name="model">sale.order.line</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="sale_order_multisection.sol_sections_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="before">
                <header>
                    <button class="oe_highlight" type="action" name="%(action_wizard_multisection_discount)d" string="Discounts" context="{'default_section_id':id,'default_name':section}"/>
                </header>
            </xpath>
        </field>
    </record>

</odoo>
