<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="scrap_unbuild_product_product_template_only_form_view" model="ir.ui.view">
        <field name="name">scrap.product.product.template.only.form.view</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='options']" position="before">
                <group>
                    <field name="unbuild_type" force_save="1" attrs="{'readonly':[('default_code','!=',False)]}"/>
                </group>
            </xpath>
            <xpath expr="//page[@name='general_information']" position="after">
                <page name="desguace" string="Desguace" attrs="{'invisible':[('unbuild_type','not in',['main','subproduct'])]}">
                    <group>
                        <field name="parent_id" domain="[('id','!=',active_id),('unbuild_type','=','main')]" attrs="{'invisible':[('unbuild_type','!=','subproduct')], 'readonly':[('default_code','!=',False)]}"/>
                    </group>
                    <group>
                        <field name="unbuild_set_id"/>
                    </group>
                    <field name="unbuild_product_line_ids">
                        <tree editable="bottom">
                            <field name="part_id"/>
                            <field name="name"/>
                            <field name="qty"/>
                            <field name="newproduct_id" readonly="1"/>
                        </tree>
                    </field>
                    <group>
                        <field name="unbuild_location_id" force_save="1"/>
                    </group>
                    <h4>Subproducts:</h4>
                    <field name="subproduct_ids"/>
                </page>
            </xpath>
            <xpath expr="//field[@name='default_code']" position="attributes">
                <attribute name="attrs">{"readonly": [("unbuild_type","in",['main','subproduct'])]}</attribute>
                <attribute name="force_save">1</attribute>
            </xpath>

        </field>
    </record>

    <record id="unbuild_part_form" model="ir.ui.view">
        <field name="active" eval="True"/>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <h1>
                        <field name="name" required="1"/>
                    </h1>
                    <group>
                        <field name="category_id" required="1"/>
                    </group>
                </sheet>
            </form>
        </field>
        <field name="field_parent" eval="False"/>
        <field name="groups_id" eval="[(6, 0, [])]"/>
        <field name="inherit_id" eval="False"/>
        <field name="key" eval="False"/>
        <field name="mode">primary</field>
        <field name="model">unbuild.part</field>
        <field name="name">Default form view for unbuild part</field>
        <field name="priority">16</field>
        <field name="type">form</field>
    </record>

    <record id="unbuild_set_form" model="ir.ui.view">
        <field name="active" eval="True"/>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" required="1"/>
                        <field name="line_ids" context="{'default_qty':1}">
                            <tree editable="bottom">
                                <field name="part_id" required="1"/>
                                <field name="qty" required="1"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
        <field name="field_parent" eval="False"/>
        <field name="groups_id" eval="[(6, 0, [])]"/>
        <field name="inherit_id" eval="False"/>
        <field name="key" eval="False"/>
        <field name="mode">primary</field>
        <field name="model">unbuild.set</field>
        <field name="name">Default form view for unbuild set</field>
        <field name="priority">16</field>
        <field name="type">form</field>
    </record>

    <record id="unbuild_part_tree" model="ir.ui.view">
        <field name="active" eval="True"/>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="category_id"/>
            </tree>
        </field>
        <field name="field_parent" eval="False"/>
        <field name="groups_id" eval="[(6, 0, [])]"/>
        <field name="inherit_id" eval="False"/>
        <field name="key" eval="False"/>
        <field name="mode">primary</field>
        <field name="model">unbuild.part</field>
        <field name="name">Default tree view for unbuild part</field>
        <field name="priority">16</field>
        <field name="type">tree</field>
    </record>

    <record id="unbuild_set_tree" model="ir.ui.view">
        <field name="active" eval="True"/>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="line_ids" widget="many2many_tags"/>
            </tree>
        </field>
        <field name="field_parent" eval="False"/>
        <field name="groups_id" eval="[(6, 0, [])]"/>
        <field name="inherit_id" eval="False"/>
        <field name="key" eval="False"/>
        <field name="mode">primary</field>
        <field name="model">unbuild.set</field>
        <field name="name">Default tree view for unbuild set</field>
        <field name="priority">16</field>
        <field name="type">tree</field>
    </record>


</odoo>
