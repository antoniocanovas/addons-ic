<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_partner_route_view_search" model="ir.ui.view">
        <field name="name">res.partner.route.search</field>
        <field name="model">res.partner.route</field>
        <field name="arch" type="xml">
            <search string="Search Quotation Template">
                <field name="name"/>
                <filter string="Archived" name="inactive" domain="[('active','=', False)]"/>
            </search>
        </field>
    </record>

    <record id="res_partner_route_view_form" model="ir.ui.view">
        <field name="name">res.partner.route.form</field>
        <field name="model">res.partner.route</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Route">
                <sheet>
                    <div name="button_box" class="oe_button_box"/>
                    <widget name="web_ribbon" text="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                    <div class="oe_title">
                        <field name="active" invisible="1"/>
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <notebook name="main_book">
                        <page string="Lines">
                            <field name="line_ids" widget="section_and_note_one2many">
                                <tree string="Route Lines" editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="origin_id"/>
                                    <field name="delivery_id"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <field name="note" nolabel="1"
                           placeholder="Enter any note you want"/>
                </sheet>
            </form>
        </field>
    </record>

    <record id="res_partner_route_view_tree" model="ir.ui.view">
        <field name="name">res.partner.route.tree</field>
        <field name="model">res.partner.route</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="Route">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="res_partner_route_action" model="ir.actions.act_window">
        <field name="name">Routes</field>
        <field name="res_model">res.partner.route</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="res_partner_route_view_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your route
            </p>
        </field>
    </record>
    <menuitem id="menu_routes_config" parent="sale.menu_sale_config" sequence="50" name="Routes"/>
    <menuitem id="res_partner_route_menu" action="res_partner_route_action" parent="menu_routes_config" sequence="10" name="Routes" groups="sales_team.group_sale_manager"/>

</odoo>
