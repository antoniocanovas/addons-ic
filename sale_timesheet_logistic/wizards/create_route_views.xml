<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_partner_route_view_form_wizard" model="ir.ui.view">
        <field name="name">partner.route.wizard.form</field>
        <field name="model">partner.route.wizard</field>
        <field name="arch" type="xml">
            <form string="Generate Route">
                <group>
                    <span class="o_form_label">This operation will create a route with the lines of the sale order.</span>
                </group>
                <group>
                    <field name="name"/>
                </group>
                <footer>
                    <button name="create_route" string="Create" type="object" class="btn-primary"/>
                    <button string="Close" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <act_window
            name="Create Route"
            res_model="partner.route.wizard"
            binding_model="sale.order"
            binding_views="form"
            view_mode="form"
            target="new"
            id="action_res_partner_route_create"
    />

</odoo>
