<odoo>
    <data>

        <record id="act_properties_2_opportunities" model="ir.actions.act_window">
            <field name="name">Opportunities</field>
            <field name="res_model">crm.lead</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_realstate_id': active_id, 'default_realstate_id': active_id}</field>
            <field name="groups_id" eval="False"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new Opportunities!
                </p>
            </field>
        </record>

        <record id="act_properties_2_event" model="ir.actions.act_window">
            <field name="name">Event</field>
            <field name="res_model">calendar.event</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_realstate_id': active_id, 'default_realstate_id': active_id}</field>
            <field name="groups_id" eval="False"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new Event!
                </p>
            </field>
        </record>

        <record id="realstate_property_form" model="ir.ui.view">
            <field name="active" eval="True"/>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="state" widget="statusbar" clickable="1"/>
                    </header>
                    <sheet string="Inmuebles">
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" type="action" name="%(realstate.act_properties_2_opportunities)d" icon="fa-usd">
                                <field string="Opportunity" name="opportunity_ids_count" widget="statinfo"/>
                            </button>
                            <button class="oe_stat_button" type="action" name="%(realstate.act_properties_2_event)d" icon="fa-calendar">
                                <field string="Event" name="event_ids_count" widget="statinfo"/>
                            </button>
                        </div>
                        <h1>
                            <field name="name" placeholder="Referencia o nombre del inmueble" required="1"/>
                        </h1>
                        <group name="Ppal Inmueble">
                            <group name="PpalInmuebleIzquierda">
                                <field name="type" can_create="true" can_write="true" modifiers="{}"/>
                                <field name="realstate_area"/>
                                <field name="user_id" can_create="true" can_write="true" modifiers="{}"/>
                            </group>
                            <group name="PpalInmuebleDerecha">
                                <field name="photo" string="Foto" widget="image" class="oe_right oe_avatar"/>
                            </group>
                        </group>
                        <group col="4">
                            <field name="to_sale" modifiers="{}"/>
                            <field name="to_season"/>
                            <field name="to_rent"/>
                            <!--<newline/>-->
                            <field name="active"/>
                            <field name="income_date"/>
                            <field name="outgoing_date"/>

                        </group>

                        <notebook name="characters">
                            <page name="character_page" string="Características">
                                <group name="group_RoVFx">
                                    <group name="group_RoVFx_left" string="Vivienda">
                                        <field name="street"/>
                                        <field name="street2"/>
                                        <field name="city"/>
                                        <field name="state_id"/>
                                        <field name="inhabited"/>
                                        <field name="useful_space"/>
                                        <field name="built_space"/>
                                        <field name="property_origin"/>
                                        <field name="built_date"/>
                                    </group>
                                    <group name="group_RoVFx_right" string="Oferta">
                                        <field name="sale_price"/>
                                        <field name="rental_price"/>
                                        <field name="advance_price"/>
                                        <field name="community_price"/>
                                        <field name="date"/>
                                        <field name="last_change"/>
                                    </group>
                                </group>
                                <field name="note" placeholder="Descripción breve y notas importantes..."/>

                            </page>
                            <page name="property_page_habitabilidad" string="Habitabilidad">
                                <group name="property_group_habitabilidad">
                                    <group name="property_left_habitabilidad_general" string="General">
                                        <field name="room_qty"/>
                                        <field name="living_room_qty"/>
                                        <field name="kitchen"/>
                                        <field name="bathroom_qty"/>
                                        <field name="parking"/>
                                        <field name="heating_id"/>
                                        <field name="cooling_id"/>

                                        <field name="environment_id"/>
                                        <field name="internet_id"/>
                                        <field name="property_orientation"/>
                                        <field name="conservation"/>
                                        <field name="swimmingpool"/>

                                    </group>
                                    <group name="property_right_extras" string="Extras">
                                        <field name="extra_ids" nolabel="1"/>
                                    </group>
                                </group>
                            </page>
                            <page name="realstate_anagement" string="Management">
                                <group name="group_management">
                                    <group name="property_left_management" string="General">
                                        <field name="owner_id"/>
                                        <field name="address_id" context="{'default_parent_id':owner_id, 'default_type':'other'}" domain="['|',('id','=',owner_id),('parent_id','=',owner_id)]"/>
                                        <field name="service_amount"/>
                                        <field name="notary_cost"/>
                                        <field name="plusvalia_amount"/>
                                        <field name="owner_vat_file1"/>
                                        <field name="owner_vat_file1"/>
                                        <field name="exclusivity"/>
                                    </group>
                                    <group name="property_right_management" string="Documents">
                                        <field name="energy_certificate"/>
                                        <field name="contribution_file" filename="contribution_file_name"/>
                                        <field name="titlet_dead" filename="titlet_dead_name"/>
                                        <field name="title_dead_simple" filename="title_dead_simple_name"/>
                                        <field name="document_url" widget="url"/>
                                    </group>
                                </group>
                            </page>
                            <page name="realstate_advice" string="Advices">
                                <field name="advice_ids"/>
                            </page>
                            <!--<page name="page_23zGI" string="Suministros">
                              <group name="group_23zGI">
                                  <group name="group_23zGI_left">
                                      <field name="x_ref_electricidad"/>
                                      <field name="x_energia"/>
                                      <field name="x_ref_gas"/>
                                      <field name="x_ref_agua"/>
                                      <field name="x_ref_seguro_hogar"/>
                                      <field name="x_fecha_ee"/>
                                      <field name="x_codigo_ee"/>
                                  </group>
                                  <group name="group_23zGI_right">
                                      <field name="x_pago_comunidad"/>
                                      <field name="x_escritura"/>
                                      <field name="x_seguro_hogar"/>
                                      <field name="x_ibi"/>
                                      <field name="x_mto_piscina"/>
                                      <field name="x_administrador_id"/>
                                  </group>
                              </group>
                            </page>
                            <page name="page_BmZwA" string="Varios">
                                <group name="group_BmZwA">
                                    <group name="group_BmZwA_left">
                                        <field name="x_pvp_min_alquiler"/>
                                        <field name="x_pvp_min_venta"/>
                                        <field name="x_referencia_catastral"/>
                                        <field name="x_finca_registral"/>
                                        <field name="x_n_llaves"/>
                                        <field name="x_notas_internas"/>
                                    </group>
                                    <group name="group_BmZwA_right" string="Inicio de Contrato">
                                        <field name="x_amueblar"/>
                                        <field name="x_alta_suministro"/>
                                        <field name="x_ofertar_seguro_hogar"/>
                                        <field name="x_ofertar_reforma"/>
                                        <field name="x_ofertar_ee"/>
                                           <field name="x_contrato_iniciado" invisible="1"/>
                                    </group>
                                </group>
                            </page>
                            <page name="page_mb705" string="Comercialización">
                                <group name="group_mb705">
                                    <group name="group_mb705_left" string="Publicación">
                                        <field name="x_autorizados_publicar_fotos"/>
                                        <field name="x_medio_ids" widget="many2many_tags"/>
                                    </group>
                                    <group name="group_mb705_right" string="Preventa">
                                        <field name="x_cartel"/>
                                        <field name="x_reservado"/>
                                        <field name="x_comercial_id"/>
                                        <field name="x_notas_caracteristicas"/>
                                    </group>
                                </group>
                            </page> -->

                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread" options="{'post_refresh':'recipients'}"/>
                    </div>
                </form>
            </field>
            <field name="field_parent" eval="False"/>
            <field name="groups_id" eval="[(6, 0, [])]"/>
            <field name="inherit_id" eval="False"/>
            <field name="key" eval="False"/>
            <field name="mode">primary</field>
            <field name="model">realstate.property</field>
            <field name="name">Default form view for Realstate</field>
            <field name="priority">16</field>
            <field name="type">form</field>
        </record>

        <record id="realstate_property_tree" model="ir.ui.view">
            <field name="active" eval="True"/>
            <field name="arch" type="xml">
                <tree string="Inmueble">
                    <field name="name"/>
                    <field name="city"/>
                    <field name="realstate_area"/>
                    <field name="type"/>
                    <field name="income_date"/>
                    <field name="outgoing_date"/>
                    <field name="rental_price"/>
                    <field name="to_rent"/>
                    <field name="to_sale"/>

                </tree>
            </field>
            <field name="field_parent" eval="False"/>
            <field name="groups_id" eval="[(6, 0, [])]"/>
            <field name="inherit_id" eval="False"/>
            <field name="key" eval="False"/>
            <field name="mode">primary</field>
            <field name="model">realstate.property</field>
            <field name="name">Default form tree for Realstate</field>
            <field name="priority">16</field>
            <field name="type">tree</field>
        </record>

        <record id="view_crm_lead_realstate_inh" model="ir.ui.view">
            <field name="name">crm.lead.form.realstate</field>
            <field name="model">crm.lead</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="crm.crm_lead_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='tag_ids']" position="after">
                    <field name="realstate_id"/>
                </xpath>
            </field>
        </record>

        <record id="view_calendar_event_realstate_inh" model="ir.ui.view">
            <field name="name">calendar.event.form.realstate</field>
            <field name="model">calendar.event</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="calendar.view_calendar_event_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='location']" position="after">
                    <field name="realstate_id"/>
                </xpath>
            </field>
        </record>

        <record id="view_res_company_realstate_inh" model="ir.ui.view">
            <field name="name">res.company.form.realstate</field>
            <field name="model">res.company</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/notebook/page[@name='general_info']" position="after">
                    <page string="Realstate" name="realstate">
                        <group>
                            <group>
                                <field name="realstate"/>
                            </group>
                            <group>

                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

        <record id="view_partner_form_documents" model="ir.ui.view">
            <field name="name">view.partner.form.documents</field>
            <field name="model">res.partner</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page name="documents" string="Documents">
                            <group>
                            <group>
                                <field name="vat_file1" filename="vat_file1_name"/>
                            </group>
                            <group>
                                <field name="vat_file2" filename="vat_file2_name"/>
                            </group>
                        </group>
                        </page>
                </xpath>
            </field>
        </record>

    </data>
</odoo>