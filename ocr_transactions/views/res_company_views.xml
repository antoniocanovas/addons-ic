<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_company_ocr2invoice" model="ir.ui.view">
        <field name="name">OCR company controller</field>
        <field name="model">res.company</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[1]" position="after">
                <page name="OCR" string="OCR">
                    <group>
                        <field name="api_key"/>
                        <field name="api_domain"/>
                    </group>
                    <group>
                        <button name="action_get_documents" string="Get Documents" type="object" class="oe_highlight oe_read_only"/>
                        <field name="last_connection_date" readonly="True"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
