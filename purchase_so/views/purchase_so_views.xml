<?xml version='1.0' encoding='UTF-8'?>
<odoo>

     <record id="view_purchase_so_order_form" model="ir.ui.view">
        <field name="name">SO</field>
        <field name="model">purchase.order</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_ref']" position="after">
                <field name="so_id"/>
            </xpath>
        </field>
    </record>

    <record id="action_view_purchases_so" model="ir.actions.act_window">
        <field name="binding_model_id" eval="False"/>
        <field name="binding_type">action</field>
        <field name="context">{'search_default_so_id': active_id,'default_so_id': active_id}</field>
        <field name="domain">[('so_id', '=', active_id)]</field>
        <field name="groups_id" eval="[(6, 0, [])]"/>
        <field name="help"><![CDATA[<p>Compras</p>]]></field>
        <field name="limit">80</field>
        <field name="name">Compras</field>
        <field name="res_model">purchase.order</field>
        <field name="target">current</field>
        <field name="type">ir.actions.act_window</field>
        <!--<field name="view_id" ref="helpdesk.helpdesk_tickets_view_tree"/>-->
        <field name="usage" eval="False"/>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="view_so_purchase_order_form" model="ir.ui.view">
        <field name="name">Purchases</field>
        <field name="model">sale.order</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/div[@name='button_box']" position="inside">

                    <button class="oe_stat_button oe_read_only" icon="fa-spinner" type="object" name="action_view_purchases">
                        <field widget="statinfo" name="purchase_order_count" string="Compras"/>
                    </button>
            </xpath>
        </field>
    </record>

</odoo>
