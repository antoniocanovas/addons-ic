<?xml version='1.0' encoding='UTF-8'?>
<odoo>

    <record id="report_factura_canje_report" model="ir.ui.view">
        <field name="name">report.factura.canje.inh.report</field>
        <!--
        <field name="inherit_id" ref="factura_canje.factura_canje"/>
        -->
        <field name="arch" type="xml">

            <data>
                <record id="docs_report" model="ir.actions.report">
                    <field name="name">Docs</field>
                    <field name="model">docs.docs</field>
                    <field name="report_type">qweb-pdf</field>
                    <field name="report_name">docs_base.factura_canje</field>
                    <field name="report_file">docs_base.docs_report_document</field>
                    <field name="print_report_name">((str(object.type_id.name) or ''))</field>
                    <field name="attachment">((str(object.type_id.name) or '')+'.pdf')</field>
                    <field name="binding_model_id" ref="model_factura_canje"/>
                    <field name="binding_type">report</field>
                </record>

                <!-- Encabezado -->
                <div>
                    <img t-if="env.company.logo" t-att-src="image_data_uri(env.company.logo)" style="height: 40px; width: 80px; text-align: left; margin: -10px; margin-left: 10px;" alt="Logo"/>
                </div>
                <div style="border-bottom: 1px solid black;"/>

                <!-- Datos -->
                <div style="display: flex; align-items: center; justify-content: space-between;">
                    <!-- Ubicación Abasto -->
                    <div>
                        <table>
                            <tr>
                                <th>Abasto</th>
                            </tr>
                            <tr>
                                <th>C/Pepito de los palomos</th>
                            </tr>
                            <tr>
                                <th>Población</th>
                            </tr>
                        </table>
                    </div>

                    <!-- Datos fiscales -->
                    <div>
                        <table>
                            <tr>
                                <th>Datos Fiscales</th>
                            </tr>
                            <tr>
                                <th>Razón Social:</th>
                            </tr>
                            <tr>
                                <th>NIF:</th>
                            </tr>
                        </table>
                    </div>
                </div>

                <div style="border-bottom: 1px solid black;"/>

                <!-- Datos Factura -->
                <div style="display: flex; align-items: center; justify-content: space-between;">
                    <!-- Factura -->
                    <div>
                        <table>
                            <tr>
                                <th>Nº Factura:</th>
                            </tr>
                            <tr>
                                <th>C/</th>
                            </tr>
                            <tr>
                                <th>Factura simplificada</th>
                            </tr>
                        </table>
                    </div>
                    <div>
                        <table>
                            <tr>
                                <th>Fecha Factura:</th>
                            </tr>
                            <tr>
                                <th>Telf:</th>
                            </tr>
                            <tr>
                                <th>Fecha factura simplificada:</th>
                            </tr>
                        </table>
                    </div>
                </div>
                <br/>

                <!-- Tabla factura -->
                <div>
                    <table>
                        <thead>
                            <tr>
                                <th>Descripción</th>
                                <th>Unid.</th>
                                <th>P.Unitario</th>
                                <th>B.Imp</th>
                                <th>IVA</th>
                                <th>Cuota IVA</th>
                                <th>Importe</th>
                            </tr>
                        </thead>
                        <tr>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>
                        <tr>
                            <th>Total:</th>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>
                    </table>
                </div>
                <br/>

                <!-- Detalle -->
                <div>
                    <table>
                        <thead>
                            <tr>
                                <th>Detalle</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>IVA</td>
                                <td>Base imponible</td>
                                <td>Cuota</td>
                                <td>Total</td>
                            </tr>
                            <tr>
                                <th colspan="5" style="text-align: right;">Total factura:</th>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <br/>

                <!-- Forma de pago -->
                <div>
                    <table>
                        <thead>
                            <tr>
                                <th>Forma de pago</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Efectivo</td>
                                <td></td>
                            </tr>
                        </tbody>
                    </table>
                </div>


            </data>

        </field>
        <field name="type">qweb</field>
        <field name="priority">999</field>
    </record>
</odoo>
