<?xml version='1.0' encoding='UTF-8'?>
<odoo>

    <record id="docs_report" model="ir.actions.report">
        <field name="name">Factura de canje</field>
        <field name="model">factura.canje</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">l10n_es_factura_canje_tpv.factura_canje_report</field>
        <field name="report_file">l10n_es_factura_canje_tpv.factura_canje_report</field>
        <field name="print_report_name">((str(object.name) or '_'))</field>
        <field name="attachment">((str(object.name) or '_')+'.pdf')</field>
        <field name="binding_model_id" ref="model_factura_canje"/>
        <field name="binding_type">report</field>
    </record>

    <template id="factura_canje_report_document">
        <t t-name="factura_canje_report_document">
            <t t-call="web.external_layout">

                <!-- <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)"/> -->
                <t t-set="address">
                    <div t-field="o.partner_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;], &quot;no_marker&quot;: True}"/>
                    <p t-if="o.partner_id.vat"><t t-esc="o.partner_id.company_id.country_id.vat_label or 'Tax ID'"/>: <span t-field="o.partner_id.vat"/></p>
                </t>
                <div>
                    <table style="border-collapse: collapse;">
                        <thead>
                            <tr>
                                <th style="padding: 10px;">Fecha</th>
                                <th style="padding: 10px;">N. recibo</th>
                                <th style="padding: 10px;">Cliente</th>
                                <th style="padding: 10px;">Cajero</th>
                                <th style="padding: 10px;">Total</th>
                                <th style="padding: 10px;">Estado</th>
                                <th style="padding: 10px;">Impuesto</th>
                            </tr>
                        </thead>

                        <t t-foreach="o.pos_order_ids" t-as="order">
                            <tbody style="font-size: 12px">
                                <tr>
                                    <td style="padding: 10px;"><span t-field="order.date_order"/></td>
                                    <td style="padding: 10px;"><span t-field="order.pos_reference"/></td>
                                    <td style="padding: 10px;"><span t-field="order.partner_id"/></td>
                                    <td style="padding: 10px;"><span t-field="order.user_id"/></td>
                                    <td style="padding: 10px;"><span t-field="order.amount_total" t-options="{&quot;widget&quot;: &quot;monetary&quot;}"/></td>
                                    <td style="padding: 10px;"><span t-field="order.state"/></td>
                                    <td style="padding: 10px;"><span t-field="order.amount_tax"/></td>

                                </tr>
                                <tr>
                                  <!--  <td><span t-field="order.total_amount"/></td> -->
                                </tr>
                            </tbody>
                        </t>
                    </table>
                </div>
               <div class="clearfix">
                        <t t-set="total" t-value='0'/>
                        <t t-set="subtotal" t-value='0'/>
                        <div id="total" class="row">
                            <div t-attf-class="#{'col-6' if report_type != 'html' else 'col-sm-7 col-md-6'} ml-auto">
                                <table class="table table-sm" style="page-break-inside: avoid;">
                                   <t t-foreach="o.pos_order_ids" t-as="order">
                                      <tr class="border-black o_subtotal" style="">
                                          <td><strong>Subtotal</strong></td>
                                          <td class="text-right">
                                              <span t-field="order.account_move.amount_untaxed"/>
                                          </td>
                                      </tr>
                                      <t t-foreach="order.account_move.amount_by_group" t-as="amount_by_group">
                                          <tr style="">
                                              <t t-if="len(order.account_move.line_ids.filtered(lambda line: line.tax_line_id)) in [0, 1] and float_compare(order.account_move.amount_untaxed, amount_by_group[2], precision_rounding=order.account_move.currency_id.rounding) == 0">
                                                  <td><span class="text-nowrap" t-esc="amount_by_group[0]"/></td>
                                                  <td class="text-right o_price_total">
                                                      <span class="text-nowrap" t-esc="amount_by_group[3]"/>
                                                  </td>
                                              </t>
                                              <t t-else="">
                                                  <td>
                                                      <span t-esc="amount_by_group[0]"/>
                                                      <span class="text-nowrap"> on
                                                          <t t-esc="amount_by_group[4]"/>
                                                      </span>
                                                  </td>
                                                  <td class="text-right o_price_total">
                                                      <span class="text-nowrap" t-esc="amount_by_group[3]"/>
                                                  </td>
                                              </t>
                                          </tr>
                                      </t>
                                      <tr class="border-black o_total">
                                          <td><strong>Total</strong></td>
                                          <td class="text-right">
                                              <span class="text-nowrap" t-field="order.account_move.amount_total"/>
                                          </td>
                                      </tr>
                                      <t t-if="print_with_payments">
                                          <t t-if="o.payment_state != 'invoicing_legacy'">
                                              <t t-set="payments_vals" t-value="order.account_move.sudo()._get_reconciled_info_JSON_values()"/>
                                              <t t-foreach="payments_vals" t-as="payment_vals">
                                                  <tr>
                                                      <td>
                                                          <i class="oe_form_field text-right oe_payment_label">Paid on <t t-esc="payment_vals['date']" t-options="{&quot;widget&quot;: &quot;date&quot;}"/></i>
                                                      </td>
                                                      <td class="text-right">
                                                          <span t-esc="payment_vals['amount']" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: order.account_move.currency_id}"/>
                                                      </td>
                                                  </tr>
                                              </t>
                                              <t t-if="len(payments_vals) &gt; 0">
                                                  <tr class="border-black">
                                                      <td><strong>Amount Due</strong></td>
                                                      <td class="text-right">
                                                          <span t-field="order.account_move.amount_residual"/>
                                                      </td>
                                                  </tr>
                                              </t>
                                          </t>
                                      </t>
                                    </t>
                                </table>
                            </div>
                        </div>
                    </div>


                <div style="margin: 10%">
                    <span t-field="o.description"/>
                </div>
            </t>
        </t>
    </template>
</odoo>