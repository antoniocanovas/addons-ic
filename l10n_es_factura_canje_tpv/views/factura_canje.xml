<?xml version='1.0' encoding='UTF-8'?>
<odoo>

    <record id="docs_report" model="ir.actions.report">
        <field name="name">Factura de canje</field>
        <field name="model">factura.canje</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">l10n_es_factura_canje_tpv.factura_canje_report</field>
        <field name="report_file">l10n_es_factura_canje_tpv.factura_canje_report</field>
        <field name="print_report_name">((str(object.name) or '_'))</field>
        <field name="attachment">((str(object.name) or '_')+'.pdf')</field>
        <field name="binding_model_id" ref="model_factura_canje"/>
        <field name="binding_type">report</field>
    </record>

    <template id="factura_canje_report_document">
        <t t-name="factura_canje_report_document">
            <t t-call="web.external_layout">

                <!-- <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)"/> -->
                <t t-set="address">
                    <div t-field="o.partner_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;], &quot;no_marker&quot;: True}"/>
                    <p t-if="o.partner_id.vat"><t t-esc="o.partner_id.company_id.country_id.vat_label or 'Tax ID'"/>: <span t-field="o.partner_id.vat"/></p>
                </t>
                <div>
                    <table style="border-collapse: collapse;">
                        <thead>
                            <tr>
                                <th style="padding: 10px;">Ref. Venta</th>
                                <th style="padding: 10px;">Sesión</th>
                                <th style="padding: 10px;">Fecha</th>
                                <th style="padding: 10px;">N. recibo</th>
                                <th style="padding: 10px;">Cliente</th>
                                <th style="padding: 10px;">Cajero</th>
                                <th style="padding: 10px;">Total</th>
                                <th style="padding: 10px;">Estado</th>
                                <th style="padding: 10px;">Factura de canje</th>
                            </tr>
                        </thead>

                        <t t-set="subtotal" t-value="0" />
                        <t t-set="total_tax" t-value="0" />

                        <t t-foreach="o.pos_order_ids" t-as="order">
                            <t t-set="total" t-value="order.amount_total-order.amount_tax" />
                            <t t-set="subtotal" t-value="subtotal+(order.amount_total-order.amount_tax)" />
                            <t t-set="total_tax" t-value="total_tax+order.amount_tax" />
                            <tbody style="font-size: 12px">
                                <tr>
                                    <td style="padding: 10px;"><span t-field="order.name"/></td>
                                    <td style="padding: 10px;"><span t-field="order.session_id"/></td>
                                    <td style="padding: 10px;"><span t-field="order.date_order"/></td>
                                    <td style="padding: 10px;"><span t-field="order.pos_reference"/></td>
                                    <td style="padding: 10px;"><span t-field="order.partner_id"/></td>
                                    <td style="padding: 10px;"><span t-field="order.user_id"/></td>
                                    <td style="padding: 10px;"><t t-esc="'%.2f'% total"/>€</td>
                                    <td style="padding: 10px;"><span t-field="order.state"/></td>
                                    <td style="padding: 10px;"><span t-field="order.fcanje_id"/></td>
                                </tr>
                                <tr>
                                </tr>
                            </tbody>
                        </t>
                    </table>
                </div>

                <div class="clearfix">
                    <div id="total" class="row">
                        <div t-attf-class="#{'col-6' if report_type != 'html' else 'col-sm-7 col-md-6'} ml-auto">
                            <table class="table table-sm" style="page-break-inside: avoid;">
                                <tr class="border-black o_subtotal" style="">
                                    <td><strong>Subtotal</strong></td>
                                    <td class="text-right">
                                        <t t-esc="'%.2f'% subtotal"/> €
                                    </td>
                                </tr>

                                <tr class="border-black o_subtotal" style="">
                                    <td><strong>Tax</strong></td>
                                    <td class="text-right">
                                        <t t-esc="'%.2f'% total_tax"/> €
                                    </td>
                                </tr>
                                <tr class="border-black o_total">
                                    <td><strong>Total</strong></td>
                                    <td class="text-right">
                                        <t t-set="total_total" t-value="total_tax+subtotal" />
                                        <t t-esc="'%.2f'% total_total"/> €
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>

                <div style="margin: 10%">
                    <span t-field="o.description"/>
                </div>

            </t>
        </t>
    </template>
</odoo>