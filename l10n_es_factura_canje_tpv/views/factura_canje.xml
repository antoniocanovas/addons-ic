<?xml version='1.0' encoding='UTF-8'?>
<odoo>

    <record id="docs_report" model="ir.actions.report">
        <field name="name">Factura de canje</field>
        <field name="model">factura.canje</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">l10n_es_factura_canje_tpv.factura_canje_report</field>
        <field name="report_file">l10n_es_factura_canje_tpv.factura_canje_report</field>
        <field name="print_report_name">((str(object.name) or '_'))</field>
        <field name="attachment">((str(object.name) or '_')+'.pdf')</field>
        <field name="binding_model_id" ref="model_factura_canje"/>
        <field name="binding_type">report</field>
    </record>

    <template id="factura_canje_report_document">
        <t t-name="factura_canje_report_document">
            <t t-call="web.external_layout">

                <!-- <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)"/> -->
                <t t-set="address">
                    <div t-field="o.partner_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;], &quot;no_marker&quot;: True}"/>
                    <p t-if="o.partner_id.vat"><t t-esc="o.partner_id.company_id.country_id.vat_label or 'Tax ID'"/>: <span t-field="o.partner_id.vat"/></p>
                </t>
                <!--
                <t t-if="o.partner_id.partner_shipping_id == o.partner_id.partner_invoice_id                              and o.partner_id.partner_invoice_id != o.partner_id                              or doc.partner_shipping_id != doc.partner_invoice_id">
                     <t t-set="information_block">
                         <strong t-if="o.partner_id.partner_shipping_id == o.partner_invoice_id">Invoicing and Shipping Address:</strong>
                         <strong t-if="o.partner_id.partner_shipping_id != o.partner_invoice_id">Invoicing Address:</strong>
                         <div t-field="o.partner_id.partner_invoice_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;, &quot;phone&quot;], &quot;no_marker&quot;: True, &quot;phone_icons&quot;: True}"/>
                         <t t-if="o.partner_shipping_id != o.partner_invoice_id">
                             <strong>Shipping Address:</strong>
                             <div t-field="o.partner_shipping_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;, &quot;phone&quot;], &quot;no_marker&quot;: True, &quot;phone_icons&quot;: True}"/>
                         </t>
                   </t>
                 </t>
                 <div class="page">
                     <div class="oe_structure"/>

                     <h2 class="mt16">
                         <t t-if="not (env.context.get('proforma', False) or is_pro_forma)">
                             <span t-if="o.state not in ['draft','sent']">Order # </span>
                             <span t-if="o.state in ['draft','sent']">Quotation # </span>
                         </t>
                         <t t-if="env.context.get('proforma', False) or is_pro_forma">
                             <span>Pro-Forma Invoice # </span>
                         </t>
                         <span t-field="o.name"/>
                     </h2>
                     </div>
                     -->
                <div>
                    <table style="border-collapse: collapse;">
                        <thead>
                            <tr>
                                <th style="padding: 10px;">Ref. Venta</th>
                                <th style="padding: 10px;">Sesi√≥n</th>
                                <th style="padding: 10px;">Fecha</th>
                                <th style="padding: 10px;">N. recibo</th>
                                <th style="padding: 10px;">Cliente</th>
                                <th style="padding: 10px;">Cajero</th>
                                <th style="padding: 10px;">Total</th>
                                <th style="padding: 10px;">Estado</th>
                                <th style="padding: 10px;">Factura de canje</th>
                            </tr>
                        </thead>

                        <t t-foreach="o.pos_order_ids" t-as="line">
                            <tbody style="font-size: 12px">
                                <tr>
                                    <td style="padding: 10px;"><span t-field="line.name"/></td>
                                    <td style="padding: 10px;"><span t-field="line.session_id"/></td>
                                    <td style="padding: 10px;"><span t-field="line.date_order"/></td>
                                    <td style="padding: 10px;"><span t-field="line.pos_reference"/></td>
                                    <td style="padding: 10px;"><span t-field="line.partner_id"/></td>
                                    <td style="padding: 10px;"><span t-field="line.user_id"/></td>
                                    <td style="padding: 10px;"><span t-field="line.amount_total"  t-options="{&quot;widget&quot;: &quot;monetary&quot;}"/></td>
                                    <td style="padding: 10px;"><span t-field="line.state"/></td>
                                    <td style="padding: 10px;"><span t-field="line.fcanje_id"/></td>
                                </tr>
                                <tr>
                                    <td><span t-field="line.total_amount"/></td>
                                </tr>
                            </tbody>
                        </t>
                    </table>
                </div>
                <div style="margin: 10%">
                    <span t-field="o.description"/>
                </div>
            </t>
        </t>
    </template>

    <template id="factura_canje_report">
        <t t-name="factura_canje_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <!-- <t t-set="lang" t-value="o.invoice_user_id.sudo().lang if o.move_type in ('in_invoice', 'in_refund') else o.partner_id.lang"/> -->
                    <t t-call="l10n_es_factura_canje_tpv.factura_canje_report_document"/>
                </t>
            </t>
        </t>
    </template>
</odoo>