<?xml version='1.0' encoding='UTF-8'?>
<odoo>

    <record id="project_task_demesol_inh" model="ir.ui.view">
        <field name="name">project.task.demesol.form.inh</field>
        <field name="model">project.task</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//form[1]/sheet[1]/group[1]/group[2]/field[@name='tag_ids']" position="attributes">
                    <attribute name="options">{"color_field": "color", "no_create_edit": true, "no_create": true}</attribute>
                </xpath>
            </data>
        </field>
    </record>

</odoo>